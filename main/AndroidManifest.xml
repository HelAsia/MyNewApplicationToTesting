<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.introtoandroid.mynewapplicationtotesting">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <!-- android:theme="@style/AppTheme" -->

    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".MyChooseActivity"/>
    <activity android:name=".AnimationActivity"/>
    <activity android:name=".FragmentActivity"/>
    <activity android:name=".ResultsActivity"/>
    <activity android:name=".SwipeActivity"/>
    <activity android:name=".CheeseActivity"/>
    <activity android:name=".ExampleActivity"/>
    <activity android:name=".EquationActivity"/>
    <activity android:name=".ButtonsActivity"/>

    <!--
     ATTENTION: This was auto-generated to add Google Play services to your project for
         App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
    <meta-data
      android:name="com.google.android.gms.version"
      android:value="@integer/google_play_services_version"/>

    <activity android:name=".DateActivity"/>
    <activity android:name=".TimeActivity"/>
    <activity android:name=".DateTimeActivity"/>
    <activity android:name=".CollectionActivity"/>
    <activity android:name=".DynamicFragmActivity"/>
    <activity android:name=".DetailActivity"/>
    <activity
      android:label="@string/title_activity_pager"
      android:name=".PagerActivity"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity android:name=".DrawerActivity">
    </activity>
    <activity android:name=".MenuExampleActivity">
    </activity>
    <activity
      android:label="@string/app_styles_and_themes_default_name"
      android:name=".DefaultActivity"
      android:theme="@style/Main"
      android:windowSoftInputMode="stateHidden">
    </activity>
    <activity
      android:label="@string/app_styles_and_themes_bright_name"
      android:name=".BrightActivity"
      android:parentActivityName=".DefaultActivity"
      android:theme="@style/Main.Bright"
      android:windowSoftInputMode="stateHidden">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".DefaultActivity"/>
    </activity>
    <activity
      android:label="@string/app_styles_and_themes_dark_name"
      android:name=".DarkActivity"
      android:parentActivityName=".DefaultActivity"
      android:theme="@style/Main.Dark"
      android:windowSoftInputMode="stateHidden">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".DefaultActivity"/>
    </activity>
    <activity
      android:name=".SampleMaterialActivity"
      android:label="@string/app_name_material"
      android:theme="@style/AppThemeMaterial"
      android:configChanges="orientation|screenSize">
    </activity>
    <activity
      android:name=".TransitionAddActivity"
      android:label="@string/title_activity_transition_add"
      android:configChanges="orientation|screenSize"
      android:parentActivityName=".SampleMaterialActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".SampleMaterialActivity"/>
    </activity>
    <activity
      android:name=".TransitionEditActivity"
      android:label="@string/title_activity_transition_edit"
      android:configChanges="orientation|screenSize"
      android:parentActivityName=".SampleMaterialActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".SampleMaterialActivity"/>
    </activity>
  </application>

</manifest>