<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/activity_styles_and_themes"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  tools:context="com.introtoandroid.mynewapplicationtotesting.DefaultActivity">

  <include layout="@layout/toolbar"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/bottom_bar"
    android:layout_below="@+id/toolbar_simple"
    android:orientation="vertical">

    <LinearLayout
      android:id="@+id/linearlayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:id="@+id/text_view_headong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_heading"/>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <View
          android:id="@+id/circle"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="@drawable/circle"/>

        <TextView
          android:id="@+id/textViewPrimary"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toEndOf="@+id/circle"
          android:text="@string/primary_text_view"
          android:layout_toRightOf="@+id/circle"
          style="@style/PrimaryTextViewMain"/>

        <TextView
          android:id="@+id/textViewSecondary"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textViewPrimary"
          android:text="@string/second_text_view"
          android:layout_toEndOf="@+id/circle"
          android:layout_toRightOf="@+id/circle"
          style="@style/SecondaryTextViewMain"/>

        <ImageView
          android:id="@+id/info_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerInParent="true"
          android:contentDescription="@string/info"
          android:src="@android:drawable/ic_dialog_info"
          android:layout_alignParentRight="true"/>
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <View
          android:id="@+id/rectangle"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="@drawable/rectangle"/>

        <TextView
          android:id="@+id/textViewPrimary01"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toEndOf="@+id/rectangle"
          android:text="@string/primary_text_view"
          android:layout_toRightOf="@+id/rectangle"
          style="@style/PrimaryTextViewMain"/>

        <TextView
          android:id="@+id/textViewSecondary01"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textViewPrimary01"
          android:text="@string/second_text_view"
          android:layout_toEndOf="@+id/rectangle"
          android:layout_toRightOf="@+id/rectangle"
          style="@style/SecondaryTextViewMain"/>

        <ImageView
          android:id="@+id/info_view01"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerInParent="true"
          android:contentDescription="@string/info"
          android:src="@android:drawable/ic_dialog_info"
          android:layout_alignParentRight="true"/>
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <View
          android:id="@+id/circle02"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="@drawable/circle"/>

        <TextView
          android:id="@+id/textViewPrimary02"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toEndOf="@+id/circle02"
          android:text="@string/primary_text_view"
          android:layout_toRightOf="@+id/circle02"
          style="@style/PrimaryTextViewMain"/>

        <TextView
          android:id="@+id/textViewSecondary02"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textViewPrimary02"
          android:text="@string/second_text_view"
          android:layout_toEndOf="@+id/circle02"
          android:layout_toRightOf="@+id/circle02"
          style="@style/SecondaryTextViewMain"/>

        <ImageView
          android:id="@+id/info_view02"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerInParent="true"
          android:contentDescription="@string/info"
          android:src="@android:drawable/ic_dialog_info"
          android:layout_alignParentRight="true"/>
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <View
          android:id="@+id/rectangle03"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="@drawable/rectangle"/>

        <TextView
          android:id="@+id/textViewPrimary03"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toEndOf="@+id/rectangle03"
          android:text="@string/primary_text_view"
          android:layout_toRightOf="@+id/rectangle03"
          style="@style/PrimaryTextViewMain"/>

        <TextView
          android:id="@+id/textViewSecondary03"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textViewPrimary03"
          android:text="@string/second_text_view"
          android:layout_toEndOf="@+id/rectangle03"
          android:layout_toRightOf="@+id/rectangle03"
          style="@style/SecondaryTextViewMain"/>

        <ImageView
          android:id="@+id/info_view03"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerInParent="true"
          android:contentDescription="@string/info"
          android:src="@android:drawable/ic_dialog_info"
          android:layout_alignParentRight="true"/>
      </RelativeLayout>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:id="@+id/text_view_heading01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_text_heading"/>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
          android:id="@+id/circle03"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentStart="true"
          android:layout_centerInParent="true"
          android:background="@drawable/circle"
          android:layout_alignParentLeft="true"/>

        <android.support.design.widget.TextInputLayout
          android:id="@+id/input_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toEndOf="@+id/circle03"
          android:layout_toRightOf="@+id/circle03">

          <EditText
            android:id="@+id/editText02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hint"
            android:text="@string/editText"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
          android:id="@+id/info_view04"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerInParent="true"
          android:contentDescription="@string/info"
          android:src="@android:drawable/ic_dialog_info"
          android:layout_alignParentRight="true"/>
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
          android:id="@+id/rectangle04"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentStart="true"
          android:layout_centerInParent="true"
          android:background="@drawable/rectangle"
          android:layout_alignParentLeft="true"/>

        <android.support.design.widget.TextInputLayout
          android:id="@+id/input_layout01"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toEndOf="@+id/rectangle04"
          android:layout_toRightOf="@+id/rectangle04">

          <EditText
            android:id="@+id/editText03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hint"
            android:text="@string/editText"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
          android:id="@+id/info_view05"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerInParent="true"
          android:contentDescription="@string/info"
          android:src="@android:drawable/ic_dialog_info"
          android:layout_alignParentRight="true"/>
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
          android:id="@+id/circle04"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentStart="true"
          android:layout_centerInParent="true"
          android:background="@drawable/circle"
          android:layout_alignParentLeft="true"/>

        <android.support.design.widget.TextInputLayout
          android:id="@+id/input_layout03"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toEndOf="@+id/circle04"
          android:layout_toRightOf="@+id/circle04">

          <EditText
            android:id="@+id/editText04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hint"
            android:text="@string/editText"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
          android:id="@+id/info_view06"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerInParent="true"
          android:contentDescription="@string/info"
          android:src="@android:drawable/ic_dialog_info"
          android:layout_alignParentRight="true"/>
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
          android:id="@+id/rectangle05"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentStart="true"
          android:layout_centerInParent="true"
          android:background="@drawable/rectangle"
          android:layout_alignParentLeft="true"/>

        <android.support.design.widget.TextInputLayout
          android:id="@+id/input_layout04"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toEndOf="@+id/rectangle05"
          android:layout_toRightOf="@+id/rectangle05">

          <EditText
            android:id="@+id/editText05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hint"
            android:text="@string/editText"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
          android:id="@+id/info_view07"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerInParent="true"
          android:contentDescription="@string/info"
          android:src="@android:drawable/ic_dialog_info"
          android:layout_alignParentRight="true"/>
      </RelativeLayout>
    </LinearLayout>
  </LinearLayout>

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/fab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/bottom_bar"
    android:layout_alignParentEnd="true"
    android:layout_marginBottom="@dimen/mediumdp"
    android:layout_marginEnd="@dimen/mediumdp"
    android:contentDescription="@string/fab"
    android:elevation="@dimen/highEle"
    android:src="@android:drawable/ic_input_add"
    android:tint="@color/default_fab"
    android:layout_alignParentRight="true"
    android:layout_marginRight="@dimen/mediumdp"/>

  <android.support.v7.widget.Toolbar
    android:id="@+id/bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/default_toolbar"
    android:elevation="@dimen/midEle"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/Toolbar">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/transparent"
      android:orientation="horizontal">

      <ImageButton
      android:id="@+id/map_button"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:contentDescription="@string/map"
      android:src="@android:drawable/ic_dialog_map"/>

      <ImageButton
        android:id="@+id/email_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/email"
        android:src="@android:drawable/ic_dialog_email"/>

      <ImageButton
        android:id="@+id/info_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/info"
        android:src="@android:drawable/ic_dialog_info"/>
    </LinearLayout>
  </android.support.v7.widget.Toolbar>

</RelativeLayout>
